@* @model Timesheet
 *@@{
    ViewData["Title"] = "Delete Timesheet";
}

<h3>Are you sure you want to delete this timesheet?</h3>

<div>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Client:</strong> @Model.Client.UserName</p>
    <p><strong>Project:</strong> @Model.Project.ProjectName</p>
    <p><strong>Activity:</strong> @Model.Activity.ActivityName</p>
    <p><strong>Hours:</strong> @Model.HoursWorked</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.TimesheetId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Delete" class="btn btn-secondary">Cancel</a>
</form>
