@model HrManagementSystem.Models.AppraisalResponse

@{
    ViewBag.Title = "Delete Appraisal";
}

<h2 class="text-danger">Delete Appraisal</h2>

<div class="alert alert-warning mt-3">
    <strong>Are you sure you want to delete this appraisal?</strong>
</div>

<div class="card p-3 my-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Employee</dt>
        <dd class="col-sm-9">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

        <dt class="col-sm-3">Template</dt>
        <dd class="col-sm-9">@Model.Template?.ActivityId</dd>

        <dt class="col-sm-3">Submitted On</dt>
        <dd class="col-sm-9">@Model.SubmittedDate.ToString("dd MMM yyyy")</dd>

        <dt class="col-sm-3">Measuring Keys & Scores</dt>
        <dd class="col-sm-9">
            @if (Model.KeyEntries != null && Model.KeyEntries.Any())
            {
                <ul>
                    @foreach (var key in Model.KeyEntries)
                    {
                        <li>@key</li>
                    }
                </ul>
            }
            else
            {
                <em>No entries available</em>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="MyAppraisals" class="btn btn-secondary">Cancel</a>
</form>
