@model List<HrManagementSystem.Models.TimesheetEntryViewModel>

@{
    // Layout = "~/Views/Shared/_SA.cshtml";

    // Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h1>Welcome Employee</h1>

<h2 class="mt-4">Approved Timesheets</h2>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <label class="form-label">Start Date</label>
        <input type="date" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]" />
    </div>

    <div class="col-md-2">
        <label class="form-label">End Date</label>
        <input type="date" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Client Name</label>
        <input type="text" name="clientName" class="form-control" placeholder="Enter client name" value="@Context.Request.Query["clientName"]" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Search (Project, Manager, Description)</label>
        <input type="text" name="searchTerm" class="form-control" placeholder="Search..." value="@Context.Request.Query["searchTerm"]" />
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Reset</a>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Client</th>
                <th>Project</th>
                <th>Manager</th>
                <th>Hours</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("dd-MM-yyyy")</td>
                    <td>@item.ClientId</td>
                    <td>@item.ProjectId</td>
                    <td>@item.ManagerId</td>
                    <td>@item.HoursWorked</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No approved timesheets found.</p>
}

<div class="tableContent" align="center">
    <div class="col-md-4 w-50 d-grid align-content-center">
        <table border="0" cellpadding="10" cellspacing="5" width="60%" align="center">
            <tr>
                <td>

                    <a asp-action="CreateTimesheet" class="btn btn-info">Create Timesheet</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="MyTimesheets" class="btn btn-info">View My Timesheets</a>

                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Appraisals" class="btn btn-info"> My Appraisals</a>

                </td>
                <td>
                    <a asp-controller="Employee" asp-action="MyAppraisals" class="btn btn-info"> View Appraisals</a>

                </td>
                <td>
                    <a asp-controller="Employee" asp-action="ViewLeavePolicy" class="btn btn-info"> View LeavePolicy</a>

                </td>
                <td>
                    <a asp-controller="Employee" asp-action="ApplyLeave" class="btn btn-info">  ApplyLeave</a>

                </td>
            </tr>

          @*  <tr>
               <td>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Submit Timesheet</a>

               </td>
           </tr> *@

            <tr>
                
