<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="Index">HR Management System</a>
            <div class="d-flex">
                <span class="text-white me-3">Welcome, Employee</span>
                <a href=" @Url.Action("Logout", "Account")" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 mb-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body p-3">
                        <h5 class="fw-semibold text-center mb-3">Quick Actions</h5>
                        <div class="list-group">
                            <a href="CreateTimesheet" class="list-group-item list-group-item-action text-center">🕒 Create Timesheet</a>
                            <a href="MyTimesheets" class="list-group-item list-group-item-action text-center">📅 View My Timesheets</a>
                            <a href="Appraisals" class="list-group-item list-group-item-action text-center">⭐ My Appraisals</a>
                            <a href="MyAppraisals" class="list-group-item list-group-item-action text-center">📄 View Appraisals</a>
                            <a href="ViewLeavePolicy" class="list-group-item list-group-item-action text-center">📘 View Leave Policy</a>
                            <a href="ApplyLeave" class="list-group-item list-group-item-action text-center">📝 Apply Leave</a>
                        </div>
                    </div>
                </div>
            </div>
          
            <!-- Main content -->
            <div class="col-md-9 col-lg-10">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold">👋 Welcome Employee</h2>
                    <hr class="mx-auto" style="width: 200px; border: 2px solid #0dcaf0;">
                </div>
                @RenderBody()
            </div>
        </div>
    </div>


    <!-- Footer -->
    <footer class="text-center text-muted py-3 bg-white shadow-sm mt-4">
        © 2025 - HrManagementSystem · <a href="#" class="text-decoration-none">Privacy</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
