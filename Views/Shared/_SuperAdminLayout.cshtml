<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - HR Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading fw-bold py-3">HR Management</div>
            <div class="list-group list-group-flush">
                <a href="Employees" class="list-group-item list-group-item-action"><i class="fa fa-users me-2"></i> Employees</a>
                <a href="ClientList" class="list-group-item list-group-item-action"><i class="fa fa-briefcase me-2"></i> Clients</a>
                <a href="ViewManager" class="list-group-item list-group-item-action"><i class="fa fa-user-tie me-2"></i> Managers</a>
                <a href="ViewDepartment" class="list-group-item list-group-item-action"><i class="fa fa-building me-2"></i> Departments</a>
                <a href="ViewProjects" class="list-group-item list-group-item-action"><i class="fa fa-project-diagram me-2"></i> Projects</a>
                <a href="ViewActivities" class="list-group-item list-group-item-action"><i class="fa fa-tasks me-2"></i> Activities</a>
                <a href="ViewEmpLoan" class="list-group-item list-group-item-action"><i class="fa fa-money-bill me-2"></i> Loans</a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4">
                <button class="btn btn-outline-primary" id="menu-toggle"><i class="fa fa-bars"></i></button>
                <div class="ms-auto d-flex align-items-center">
                    <span class="me-3 fw-bold">Super Admin</span>
                    <a href="/Logout" class="btn btn-sm btn-danger">Logout</a>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid px-4 py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
</body>
</html>
