@model HrManagementSystem.Models.EmployeeLoan

@{
    ViewData["Title"] = "Delete Loan";
}

<h3 class="text-danger">Delete Loan</h3>
<hr />

<h5>Are you sure you want to delete this loan?</h5>

<div class="border rounded p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Employee</dt>
        <dd class="col-sm-9">@Model.Employee?.UserName</dd>

        <dt class="col-sm-3">Loan Amount</dt>
        <dd class="col-sm-9">@Model.LoanAmount</dd>

        <dt class="col-sm-3">EMI</dt>
        <dd class="col-sm-9">@Model.EMI</dd>

        <dt class="col-sm-3">Tenure (Months)</dt>
        <dd class="col-sm-9">@Model.TenureMonths</dd>

        <dt class="col-sm-3">Loan Start Date</dt>
        <dd class="col-sm-9">@Model.LoanStartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Balance Amount</dt>
        <dd class="col-sm-9">@Model.BalanceAmount</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @* Hidden ID for delete post *@
    <input type="hidden" asp-for="LoanId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ViewEmpLoan" class="btn btn-secondary">Cancel</a>
</form>
