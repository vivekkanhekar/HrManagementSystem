@model ClientLeavePolicy

<form asp-action="ManageLeavePolicy" method="post">
    <div class="form-group">
        <label>Client</label>
        <select asp-for="ClientID" asp-items="ViewBag.ClientList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Casual Leaves</label>
        <input asp-for="CasualLeaves" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sick Leaves</label>
        <input asp-for="SickLeaves" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Maternity Leaves</label>
        <input asp-for="MaternityLeaves" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Privileged Leaves</label>
        <input asp-for="PrivilegedLeaves" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Policy</button>
</form>