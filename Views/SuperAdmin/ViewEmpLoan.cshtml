@model EmployeeLoanViewModel

<h3>Loan Records</h3>

<form method="get">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name or ID" class="form-control mb-2" />
    <select name="filterActive" class="form-control mb-2">
        <option value="">-- Filter Status --</option>
        <option value="true">Active</option>
        <option value="false">Closed</option>
    </select>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-bordered mt-3">
    <thead>
        <tr><th>Loan ID</th><th>Employee</th><th>Amount</th><th>EMI</th><th>Balance</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.LoanList)
        {
            <tr>
                <td>@loan.LoanId</td>
                <td>@loan.Employee?.UserName</td>
                <td>@loan.LoanAmount</td>
                <td>@loan.EMI</td>
                <td>@loan.BalanceAmount</td>
                <td>@(loan.IsActive ? "Active" : "Closed")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@loan.LoanId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@loan.LoanId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="History" asp-route-employeeId="@loan.EmployeeId" class="btn btn-sm btn-info">History</a>
                </td>
            </tr>
        }
    </tbody>
</table>