@model IEnumerable<EmployeeViewModel>
 
@{
    ViewData["Title"] = "View Employees";
}

<h2>Employees</h2>
<div class="row">
    <div class="TableContent" align="center">
        <div class="col-md-4 w-75 d-grid bg-gradient">
            <form asp-action="ViewEmployee" asp-asp-controller="SuperAdmin" method="get">
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Address</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteEmployee" asp-route-id="@employee.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
            </form>

</div>
</div>>
</div>
